{
  "name": "Email Extraction Extension",
  "manifest_version": 2,
  "version": "1.0",
  "description": "An extension to extract emails from the current active tab",
  "permissions": ["activeTab"],
  "browser_action": {
    "default_icon": "icon.jpg",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "css": ["styles.css"],
      "js": ["content.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
